@using System.Xml;
@{
    //****************** Khởi động Dữ liệu Nguồn-Nội bộ **********
    var Ung_dung = XL_UNG_DUNG.Khoi_dong_Ung_dung();
    var Lap_trinh_vien = Ung_dung.Khoi_dong_Lap_trinh_vien();

    //******************* Khai báo và Khởi động giá trị đầu cho Biến  ********************
    var Ma_so_Chuc_nang = Request["Th_Ma_so_Chuc_nang"]; // Biến Nhập
    if (Ma_so_Chuc_nang == null) { Ma_so_Chuc_nang = Lap_trinh_vien.Chuc_nang_Khoi_dong_MH_Chinh.Ma_so; };

    var Chuoi_HTML_Ket_qua = "";
    if (Ma_so_Chuc_nang == Lap_trinh_vien.Chuc_nang_Khoi_dong_MH_Chinh.Ma_so)
    {
        Chuoi_HTML_Ket_qua = Ung_dung.Khoi_dong_MH_Chinh();
    }
    else if (Ma_so_Chuc_nang == Lap_trinh_vien.Chuc_nang_Chon_Nguoi_dung.Ma_so)
    {
        var Ma_so_Nguoi_dung = Request["Th_Ma_so_Nguoi_dung"];
        Chuoi_HTML_Ket_qua = Ung_dung.Chon_Nguoi_dung(Ma_so_Nguoi_dung);
    }
    else if (Ma_so_Chuc_nang == Lap_trinh_vien.Chuc_nang_Tra_cuu_Nguoi_dung.Ma_so)
    {
        var Chuoi_Tra_cuu = Request["Th_Chuoi_Tra_cuu"];
        Chuoi_HTML_Ket_qua = Ung_dung.Tra_cuu_Nguoi_dung(Chuoi_Tra_cuu);
    }


}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css"
          integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
</head>
<body style="font-family:Arial;width:100%;box-sizing:border-box;
              margin:0px;padding:0px;overflow-x:hidden" class="container-fluid">
    <div class="CUA_SO_TIEU_DE dropdown" style="background-color:aliceblue;margin:10px">
        <div class="btn PET" style="margin-left:0px"  data-toggle="dropdown" >
            <img src="@Ung_dung.Dia_chi_Media/PET.png"
                 style="width:40px;height:30px;" />
            <div class="btn TOM_TAT" style="color:blue;text-align:center">
                Mô hình - Công nghệ - Kỹ thuật
                <br /><b><i>Đơn giản</i></b>
            </div>
        </div>
        <div class="CUA_SO_CHUC_NANG dropdown-menu" style="background-color:gray;margin:10px">
            <div class="DANH_SACH_CHUC_NANG">
                <div class="btn  CHUC_NANG">
                    <form method="post">
                        <input name="Th_Ma_so_Chuc_nang" type="hidden" value="@Lap_trinh_vien.Chuc_nang_Tra_cuu_Nguoi_dung.Ma_so" />
                        <input name="Th_Chuoi_Tra_cuu" style="height:30px"
                               spellcheck="false" autocomplete="off" />
                    </form>
                </div>

            </div>
        </div>
        <div class="btn btn-outline-primary" style="background-color:white;color:blue">
            Phân tích &Thiết kế phần mềm -Tháng 3/2018  
            <br /> Minh họa Ứng dụng của Lập trình viên với Chức năng Thử nghiệm Đăng nhập 
        </div>      
    </div>
    
    <div class="CUA_SO_KET_QUA" style="background-color:white;">
        @Html.Raw(Chuoi_HTML_Ket_qua)
    </div>
</body>
</html>
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
