@{
    var Ung_dung = XL_UNG_DUNG.Khoi_dong_Ung_dung();
    var Nguoi_dung = (XL_NGUOI_DUNG)Session["Nguoi_dung_Dang_Nhap"];
    //******************* Khai báo Biến  ********************
    var Ma_so_Chuc_nang = Request["Th_Ma_so_Chuc_nang"]; // Biến Nhập
    if (Ma_so_Chuc_nang == null) { Ma_so_Chuc_nang = "KHOI_DONG"; };
    var Chuoi_HTML_Ket_qua = "";
    if (Ma_so_Chuc_nang == "KHOI_DONG")
    {
        Chuoi_HTML_Ket_qua = Ung_dung.Tao_chuoi_HTML_Man_hinh_Thong_tin_Ca_nhan();
    }
    else if(Ma_so_Chuc_nang == "DAT_VE")
    {
        Nguoi_dung.Dat_ve.Nguoi_dung_Khach_tham_quan.Ho_ten = Request["Th_Ho_ten"];
        Nguoi_dung.Dat_ve.Nguoi_dung_Khach_tham_quan.Dien_thoai = Request["Th_So_Dien_thoai"];
        Nguoi_dung.Dat_ve.Nguoi_dung_Khach_tham_quan.Email = Request["Th_Email"];
        Nguoi_dung.Dat_ve.Ma_nhan_ve = Request["Th_Ma_nhan_ve"];

        Chuoi_HTML_Ket_qua = Ung_dung.Dat_ve();
    }
    else if(Ma_so_Chuc_nang == "QUAY_LAI")
    {
        Response.Redirect("MH_Chon_Ghe.cshtml");
    }
}

